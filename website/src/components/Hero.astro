<style>
  .hero {
    position: relative;
    min-height: 100vh;
    padding: 140px 0 80px;
    overflow: hidden;
    background: var(--gradient-hero);
  }
  
  .glow-1 {
    top: -200px;
    left: 50%;
    transform: translateX(-50%);
  }
  
  .glow-2 {
    bottom: -200px;
    right: -100px;
    background: radial-gradient(ellipse at center, rgba(139, 92, 246, 0.1) 0%, transparent 70%);
  }
  
  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
  }
  
  .version-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: 100px;
    font-size: 14px;
    color: var(--color-text-secondary);
    margin-bottom: 32px;
  }
  
  .version-dot {
    width: 8px;
    height: 8px;
    background: #10b981;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
  
  .hero-title {
    font-size: clamp(40px, 8vw, 72px);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 24px;
    letter-spacing: -0.02em;
  }
  
  .highlight {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .hero-subtitle {
    font-size: 20px;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto 40px;
    line-height: 1.7;
  }
  
  .hero-actions {
    display: flex;
    justify-content: center;
    gap: 16px;
    margin-bottom: 32px;
    flex-wrap: wrap;
  }
  
  .btn-lg {
    padding: 16px 32px;
    font-size: 16px;
  }
  
  .platforms {
    display: flex;
    justify-content: center;
    gap: 24px;
    margin-bottom: 60px;
    flex-wrap: wrap;
  }
  
  .platform-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 14px;
    color: var(--color-text-muted);
  }
  
  .hero-screenshot {
    position: relative;
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .screenshot-frame {
    position: relative;
    background: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    overflow: hidden;
    box-shadow: var(--shadow-card);
  }
  
  .screenshot-header {
    display: flex;
    gap: 8px;
    padding: 12px 16px;
    background: var(--color-bg-tertiary);
    border-bottom: 1px solid var(--color-border);
  }
  
  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }
  
  .dot.red { background: #ef4444; }
  .dot.yellow { background: #f59e0b; }
  .dot.green { background: #10b981; }
  
  .screenshot-content {
    padding: 0;
  }
  
  .terminal-demo {
    display: grid;
    grid-template-columns: 180px 1fr 280px;
    min-height: 320px;
  }
  
  .terminal-sidebar {
    background: var(--color-bg-tertiary);
    border-right: 1px solid var(--color-border);
    padding: 12px;
  }
  
  .sidebar-item {
    padding: 10px 12px;
    font-size: 13px;
    color: var(--color-text-secondary);
    border-radius: var(--radius-sm);
    cursor: pointer;
    margin-bottom: 4px;
  }
  
  .sidebar-item.active {
    background: var(--color-bg-card);
    color: var(--color-text-primary);
  }
  
  .terminal-main {
    padding: 16px 20px;
    font-family: var(--font-mono);
    font-size: 14px;
  }
  
  .terminal-line {
    margin-bottom: 8px;
  }
  
  .prompt {
    color: var(--color-accent-primary);
  }
  
  .cmd {
    color: var(--color-text-primary);
  }
  
  .terminal-output {
    color: var(--color-text-secondary);
    margin-bottom: 4px;
    font-size: 13px;
  }
  
  .cursor {
    color: var(--color-accent-primary);
    animation: blink 1s infinite;
  }
  
  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }
  
  .ai-panel {
    background: linear-gradient(180deg, rgba(6, 182, 212, 0.05) 0%, transparent 100%);
    border-left: 1px solid var(--color-border);
    padding: 16px;
  }
  
  .ai-header {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 16px;
  }
  
  .ai-icon {
    font-size: 16px;
  }
  
  .ai-bubble {
    background: var(--color-bg-card);
    padding: 12px 16px;
    border-radius: var(--radius-md);
    font-size: 13px;
    color: var(--color-text-secondary);
    line-height: 1.6;
    border: 1px solid var(--color-border);
  }
  
  .screenshot-glow {
    position: absolute;
    inset: -2px;
    background: var(--gradient-primary);
    border-radius: var(--radius-lg);
    z-index: -1;
    opacity: 0.15;
    filter: blur(20px);
  }
  
  @media (max-width: 900px) {
    .terminal-demo {
      grid-template-columns: 1fr;
    }
    
    .terminal-sidebar,
    .ai-panel {
      display: none;
    }
  }
  
  @media (max-width: 768px) {
    .hero {
      padding: 120px 0 60px;
    }
    
    .hero-subtitle {
      font-size: 16px;
    }
    
    .btn-lg {
      padding: 14px 24px;
      font-size: 14px;
    }
  }
</style>

